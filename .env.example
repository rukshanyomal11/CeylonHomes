# ===================================
# CeylonHomes Environment Variables
# ===================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# ===================================
# Database Configuration
# ===================================
DB_URL=jdbc:mysql://localhost:3306/ceylonhomes?createDatabaseIfNotExist=true
DB_USER=root
DB_PASS=your_mysql_password_here

# ===================================
# JWT Authentication
# ===================================
# Change this to a strong random string in production
JWT_SECRET=MySecretKeyForJWTTokenGenerationCeylonHomesPropertyPlatform2026

# ===================================
# File Upload Directory
# ===================================
# Directory where listing photos will be stored
UPLOAD_DIR=uploads

# ===================================
# Admin User Configuration
# ===================================
# Default admin account created on first run
# You can change these to your preferred credentials
ADMIN_EMAIL=admin@ceylonhomes.lk
ADMIN_PASSWORD=Admin@123
ADMIN_NAME=Admin User
ADMIN_PHONE=+94771234567

# ===================================
# Server Configuration
# ===================================
# Backend server port (default: 8080)
SERVER_PORT=8080

# ===================================
# Email Configuration (For Password Reset)
# ===================================
# Gmail SMTP settings
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-google-app-password-here
MAIL_FROM_NAME=CeylonHomes
MAIL_FROM_EMAIL=your-email@gmail.com

# ===================================
# Frontend Configuration (Optional)
# ===================================
# If your frontend is on a different port/domain
# VITE_API_BASE_URL=http://localhost:8080/api
